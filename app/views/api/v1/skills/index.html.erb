<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Acquired level</th>
      <th>Cooldown</th>
      <th>Skill type</th>
      <th>Mana cost</th>
      <th>Effect</th>
      <th>T 1 1</th>
      <th>T 1 2</th>
      <th>T 1 3</th>
      <th>T 2 1</th>
      <th>T 2 2</th>
      <th>T 2 3</th>
      <th>T 3 1</th>
      <th>T 3 2</th>
      <th>T 3 3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <td><%= skill.description %></td>
        <td><%= skill.acquired_level %></td>
        <td><%= skill.cooldown %></td>
        <td><%= skill.skill_type %></td>
        <td><%= skill.mana_cost %></td>
        <td><%= skill.effect %></td>
        <td><%= skill.t_1_1 %></td>
        <td><%= skill.t_1_2 %></td>
        <td><%= skill.t_1_3 %></td>
        <td><%= skill.t_2_1 %></td>
        <td><%= skill.t_2_2 %></td>
        <td><%= skill.t_2_3 %></td>
        <td><%= skill.t_3_1 %></td>
        <td><%= skill.t_3_2 %></td>
        <td><%= skill.t_3_3 %></td>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', api_v1_edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>
