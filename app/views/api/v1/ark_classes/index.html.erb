<p id="notice"><%= notice %></p>

<h1>Ark Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ark_classes.each do |ark_class| %>
      <tr>
        <td><%= ark_class.name %></td>
        <td><%= ark_class.classtype %></td>
        <td><%= ark_class.description %></td>
        <td><%= link_to 'Show', ark_class %></td>
        <td><%= link_to 'Edit', edit_api_v1_ark_class_path(ark_class) %></td>
        <td><%= link_to 'Destroy', ark_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

